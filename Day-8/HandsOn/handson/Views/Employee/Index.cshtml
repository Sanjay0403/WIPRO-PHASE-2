@model IEnumerable<handson.Models.Employee>

<h2>Employee List</h2>
<a asp-action="Create">Create New Employee</a>
<table>
    <tr>
        <th>Name</th>
        <th>DOB</th>
        <th>DOJ</th>
        <th>Salary</th>
        <th>Department</th>
        <th>Actions</th>
    </tr>
    @foreach (var emp in Model)
    {
        <tr>
            <td>@emp.Name</td>
            <td>@emp.DateOfBirth.ToShortDateString()</td>
            <td>@emp.DateOfJoining.ToShortDateString()</td>
            <td>@emp.Salary</td>
            <td>@emp.Dept</td>
            <td>
                <a asp-action="Edit" asp-route-id="@emp.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@emp.Id">Delete</a>
            </td>
        </tr>
    }
</table>
