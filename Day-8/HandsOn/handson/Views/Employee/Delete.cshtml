@model handson.Models.Employee

<h2>Delete Employee</h2>
<p>Are you sure you want to delete this employee?</p>

<table>
    <tr><td>ID:</td><td>@Model.Id</td></tr>
    <tr><td>Name:</td><td>@Model.Name</td></tr>
    <tr><td>DOB:</td><td>@Model.DateOfBirth.ToShortDateString()</td></tr>
    <tr><td>DOJ:</td><td>@Model.DateOfJoining.ToShortDateString()</td></tr>
    <tr><td>Department:</td><td>@Model.Dept</td></tr> <!-- Changed from Department to Dept -->
    <tr><td>Salary:</td><td>@Model.Salary</td></tr>
</table>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Confirm Delete</button>
</form>

<a href="/Employee/Index">Cancel</a>
